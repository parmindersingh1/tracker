<h1>Listing Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>UserName</th>
      <th>Email</th>      
      <th>School</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username%></td>
        <td><%= user.email %></td>        
        <td><%= user.school.name %></td>
        <td><%= user.role%></td>
        <% if current_user.role == "superuser"%>
        <td><%=link_to "Edit Role",admin_panel_edit_role_path(:user=> user) %></td>
       <%end%>
      </tr>
    <% end %>
  </tbody>
</table>


