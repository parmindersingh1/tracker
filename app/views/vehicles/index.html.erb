<h1>Listing Vehicles</h1>

<table class="table">
  <thead>
    <tr>
      <th>Registration no</th>
      <th>Capacity</th>
      <th>Vehicle Type</th>
      <th>School</th>
       <% if current_user.role == "superuser" || current_user.role == "admin"%>
        <th colspan="3"></th>
      <%end%>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.registration_no %></td>
        <td><%= vehicle.capacity %></td>
        <td><%= vehicle.vehicle_type %></td>
        <td><%= vehicle.school.name %></td>
         <% if current_user.role == "superuser" || current_user.role == "admin"%>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <%end%>
         <% if current_user.role == "superuser"%>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.role == "superuser" || current_user.role == "admin"%>
<%= link_to 'New Vehicle', new_vehicle_path %>
<%end%>
