<%= form_for(@stop) do |f| %>
  <% if @stop.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@stop.errors.count, "error") %> prohibited this stop from being saved:</h2>

      <ul>
      <% @stop.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name,:class=>"form-control",:placeholder =>"Name", :required=> true %>
  </div>
  <div class="field">
    <%= f.label :latitude %><br>
    <%= f.text_field :latitude,:class=>"form-control",:placeholder =>"Latitude", :required=> true %>
  </div>
  <div class="field">
    <%= f.label :longitude %><br>
    <%= f.text_field :longitude,:class=>"form-control",:placeholder =>"Longitude", :required=> true %>
  </div>
  <div class="field">
    <%= f.label :timeperiod %><br>
    <%= f.text_field :timeperiod,:class=>"form-control",:placeholder =>"TimePeriod", :required=> true %>
  </div>
  <div class="field">
    <%= f.label :sequence %><br>
    <%= f.number_field :sequence,:class=>"form-control",:placeholder =>"Sequence", :required=> true %>
  </div>
  <div class="field">
    <%= f.label :route_id %><br>
    <%= f.select(:route_id ,@routes.map {|c| [c.name, c.id]} ,{:prompt => "Select"}, {:class=>"form-control"})%>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "submit", :class=> "btn btn-primary btn-lg btn-block"%>
  </div>
<% end %>
