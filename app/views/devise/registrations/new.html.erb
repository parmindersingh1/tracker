<div class="row">
	<div class="col-md-4 col-md-offset-4 well">
		<h2>Sign up</h2>

		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		<%= devise_error_messages! %>
		<div>
			<%= f.label :username %>
			<br />
			<%= f.text_field :username,:class=>"form-control", :required => true,:placeholder =>"Username" %>
		</div>

		<div>
			<%= f.label :email %>
			<br />
			<%= f.email_field :email,:class=>"form-control", autofocus: true , :required => true,:placeholder =>"Email"%>
		</div>

		<div>
			<%= f.label :password %>
			<br />
			<%= f.password_field :password,:class=>"form-control", autocomplete: "off", :required => true,:placeholder =>"Password" %>
		</div>

		<div>
			<%= f.label :password_confirmation %>
			<br />
			<%= f.password_field :password_confirmation,:class=>"form-control", autocomplete: "off", :required => true,:placeholder =>"Password Confirmation" %>
		</div>

		<div>
			<%= f.label :school_id %>
			<br>
			<%= f.select(:school_id ,School.all.map {|c| [c.name, c.id]} ,{:prompt => "Select"}, {:class=>"form-control", :required => true})%>
		</div>
        <br>
		<div>
			<%= f.submit "Sign up", :class=> "btn btn-primary btn-lg btn-block" %>
		</div>
	
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>