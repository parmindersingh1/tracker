<div class="row">
	<div class="col-md-4 col-md-offset-4 well">
		<h2>Sign in</h2>

		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

		<div>
			<%= f.label :login %>
			<br />
			<%= f.text_field :login,:class=>"form-control", autofocus: true,:placeholder => "Email or UserName", :required => true %>
		</div>

		<div>
			<%= f.label :password %>
			<br />
			<%= f.password_field :password,:class=>"form-control", autocomplete: "off", :required => true,:placeholder =>"Password" %>
		</div>

		<% if devise_mapping.rememberable? -%>
		<div>
			<%= f.check_box :remember_me %> <%= f.label :remember_me, :required => true %>
		</div>
		<% end -%>
       <br>
		<div>
			<%= f.submit "Sign in", :class=> "btn btn-primary btn-lg btn-block" %>
		</div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>
