<%= form_for(@route) do |f| %>
  <% if @route.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@route.errors.count, "error") %> prohibited this route from being saved:</h2>

      <ul>
      <% @route.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name,:class=>"form-control", :required => true,:placeholder => "Name" %>
  </div>
  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.text_field :start_time ,:class=>"form-control datetimepicker", :required => true,:placeholder => "Start Time" %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br>
    <%= f.text_field :end_time ,:class=>"form-control datetimepicker", :required => true,:placeholder => "End Time" %>
  </div>
  <div class="field">
    <%= f.label :vehicle_id %><br>
    <%= f.select(:vehicle_id ,Vehicle.all.map {|c| [c.registration_no, c.id]} ,{:prompt => "Select"}, {:class=>"form-control", :required => true})%>
  </div>
  <div class="actions">
    <%= f.submit "Submit", :class=> "btn btn-primary btn-lg btn-block"%>
  </div>
<% end %>
